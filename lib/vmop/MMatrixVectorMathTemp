/** \file MMatrixVectorMathTemp
  * \brief Declares and defines the 1-D Vector math temporary.
  *
  * \author Jared R. Males (jaredmales@gmail.com)
  *
  */

#ifndef __mx_MMatrixVectorMathTemp__
#define __mx_MMatrixVectorMathTemp__

namespace mx
{

///A temporary class.
/** Only used by the vector/matrix math operators of vector type classes
  */
template<class vecT> 
struct MMatrixVectorMathTemp
{
   vecT * _vector;
     
   MMatrixVectorMathTemp(vecT *v)
   {
      _vector = v;
   }
   
   MMatrixVectorMathTemp(vecT &v)
   {
      _vector = v._vector;
   }
   
};

} //namespace mx

#endif // __mx_MMatrixVectorMathTemp__

